{
  "name": "use-reacty",
  "version": "0.0.2",
  "description": "React hooks library",
  "license": "MIT",
  "author": "Xenos112 <https://github.com/Xenos112>",
  "homepage": "https://github.com/Xenos112/use-reacty#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xenos112/use-reacty.git",
    "directory": "packages/use-reacty"
  },
  "bugs": {
    "url": "https://github.com/Xenos112/use-reacty/issues"
  },
  "keywords": [
    "react",
    "hooks",
    "client",
    "react-hooks"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "*.d.ts",
    "*.js",
    "*.mjs"
  ],
  "scripts": {
    "build": "tsup --format esm,cjs --dts",
    "dev": "tsup --watch --format esm,cjs --dts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@vitest/coverage-v8": "3.2.1",
    "@vitest/ui": "3.1.3",
    "jsdom": "^26.1.0",
    "react": "^19.1.0",
    "tsup": "^8.5.0",
    "vitest": "^3.1.3"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
